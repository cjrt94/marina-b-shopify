<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="page-width section">
    <div class="three-columns-text-and-img__section">
      <div class="three-columns-text-and-img__text">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.paragraph_1 != blank %}
          <p class="three-columns-text-and-img__paragraph">{{ section.settings.paragraph_1 }}</p>
        {% endif %}

        <div class="three-columns-text-and-img__section-buttons">
          {% content_for 'blocks' %}
        </div>

        {% if section.settings.image_3 != blank %}
          <div class="three-columns-text-and-img__isotype">
            <img
              src="{{ section.settings.image_3 | image_url: width: 800 }}"
              alt="{{ section.settings.image_3.alt | escape }}"
              loading="lazy"
            >
          </div>
        {% endif %}
      </div>

      <div class="three-columns-text-and-img__images">
        {% if section.settings.image_1 != blank %}
          <img
            src="{{ section.settings.image_1 | image_url: width: 800 }}"
            alt="{{ section.settings.image_1.alt | escape }}"
            loading="lazy"
          >
        {% endif %}

        {% if section.settings.image_2 != blank %}
          <img
            src="{{ section.settings.image_2 | image_url: width: 800 }}"
            alt="{{ section.settings.image_2.alt | escape }}"
            loading="lazy"
          >
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .three-columns-text-and-img__paragraph {
  white-space: pre-line;
}

.three-columns-text-and-img__section {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  column-gap: 24px;
  align-items: center;
}

.three-columns-text-and-img__text {
  grid-column: span 3;
}

.three-columns-text-and-img__images {
  grid-column: 5 / span 8;
  display: grid;
  grid-template-columns: 1fr 1fr;
  column-gap: 24px;
  align-items: end;
}

.three-columns-text-and-img__images img:nth-child(1) {
  height: 80%;
  object-fit: cover;
  margin-left: auto;
  margin-bottom: 48px;
}

.three-columns-text-and-img__section-buttons {
  margin-top: 48px;
}

.three-columns-text-and-img__isotype {
  margin-top: 64px;
}

.three-columns-text-and-img__isotype img {
  height: 64px;
  width: auto;
}

/* ======================================
   TABLET (≤768px)
====================================== */
@media (max-width: 768px) {
  .three-columns-text-and-img__section {
    grid-template-columns: repeat(6, 1fr);
    column-gap: 16px;
  }

  .three-columns-text-and-img__text {
    grid-column: 1 / span 6;
    margin-bottom: 32px;
  }

  .three-columns-text-and-img__images {
    grid-column: 1 / span 6;
    grid-template-columns: 1fr 1fr;
    column-gap: 16px;
  }

  .three-columns-text-and-img__images img:nth-child(1) {
    margin-left: 0;
    margin-bottom: 32px;
  }

  .three-columns-text-and-img__section-buttons {
    margin-top: 40px;
  }

  .three-columns-text-and-img__isotype {
    margin-top: 48px;
  }

  .three-columns-text-and-img__isotype img {
    height: 56px;
  }
}

/* ======================================
   MOBILE (≤460px)
====================================== */
@media (max-width: 460px) {
  .three-columns-text-and-img__section {
    grid-template-columns: 1fr;
    row-gap: 24px;
  }

  .three-columns-text-and-img__text {
    grid-column: 1 / -1;
  }

  .three-columns-text-and-img__images {
    grid-column: 1 / -1;
    grid-template-columns: 1fr;
    row-gap: 24px;
  }

  .three-columns-text-and-img__images img:nth-child(1) {
    height: auto;
    margin-bottom: 0;
  }

  .three-columns-text-and-img__section-buttons {
    margin-top: 32px;
  }

  .three-columns-text-and-img__isotype {
    margin-top: 40px;
  }

  .three-columns-text-and-img__isotype img {
    height: 48px;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Three Colums Text And Img",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This is your section heading"
    },
    {
      "type": "richtext",
      "id": "paragraph_1",
      "label": "Description",
      "default": "<p>This is your section heading</p>"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Isotype"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "button"
    }
  ],
  "presets": [
    {
      "name": "Three Colums Text And Img",
      "category": "Custom"
    }
  ]
}
{% endschema %}
