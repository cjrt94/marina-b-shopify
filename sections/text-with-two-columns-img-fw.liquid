<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="page-width">
    <div class="section text-with-two-columns-img-fw__section">
      <div class="text-with-two-columns-img-fw__text">
        {% if section.settings.heading != blank %}
          <div class="text-with-two-columns-img-fw__headline">
            <h2>{{ section.settings.heading }}</h2>
          </div>
        {% endif %}

        <div class="text-with-two-columns-img-fw__body">
          {% if section.settings.paragraph_1 != blank %}
            <p class="text-with-two-columns-img-fw__paragraph-1">{{ section.settings.paragraph_1 }}</p>
          {% endif %}

          {% if section.settings.paragraph_2 != blank %}
            <p class="text-with-two-columns-img-fw__paragraph-2">{{ section.settings.paragraph_2 }}</p>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="text-with-two-columns-img-fw__images">
      {% if section.settings.image_1 != blank %}
        <img
          src="{{ section.settings.image_1 | image_url: width: 800 }}"
          alt="{{ section.settings.image_1.alt | escape }}"
          loading="lazy"
        >
      {% elsif section.settings.video_file != blank %}
        <div class="video-wrapper">
          <video
            src="{{ section.settings.video_file.sources[0].url}}"
            muted
            {% if section.settings.autoplay %}
              autoplay muted loop
            {% endif %}
            style="width:100%; height:auto;"
          ></video>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
 .text-with-two-columns-img-fw__section {
  border-top: 0.3px solid var(--color-border);
  border-bottom: 0.3px solid var(--color-border);
}

.text-with-two-columns-img-fw__text {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  align-items: center;
}

.text-with-two-columns-img-fw__headline {
  grid-column: span 4;
  border-right: 0.3px solid var(--color-border);
  height: 100%;
  display: flex;
  align-items: center;
}

.text-with-two-columns-img-fw__body {
  padding: 48px 64px;
  grid-column: span 8;
  display: grid;
  grid-template-columns: 1fr 1fr;
  column-gap: 96px;
  font-size: 16px;
}

.text-with-two-columns-img-fw__paragraph-1 {
  margin: 0;
}

.text-with-two-columns-img-fw__paragraph-2 {
  margin: 0;
}

/* ======================================
   TABLET (≤768px)
====================================== */
@media (max-width: 768px) {
  .text-with-two-columns-img-fw__text {
    grid-template-columns: 1fr;
  }

  .text-with-two-columns-img-fw__headline {
    grid-column: 1 / -1;
    border-right: none;
    border-bottom: 0.3px solid var(--color-border);
    justify-content: center;
    padding: 32px 0;
  }

  .text-with-two-columns-img-fw__body {
    grid-column: 1 / -1;
    grid-template-columns: 1fr;
    row-gap: 32px;
    column-gap: 0;
    padding: 40px 48px;
  }
}

/* ======================================
   MOBILE (≤460px)
====================================== */
@media (max-width: 460px) {
  .text-with-two-columns-img-fw__headline {
    padding: 24px 0;
  }

  .text-with-two-columns-img-fw__body {
    padding: 32px 24px;
    row-gap: 24px;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Two Columns Text And FI",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This is your section heading"
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "First paragraph",
      "default": "This is the first text block in your section."
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Second paragraph",
      "default": "This is the second text block in your section."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First image"
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "Upload video"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Two Columns Text And Full With Image",
      "category": "Custom"
    }
  ]
}
{% endschema %}
