<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="page-width section">
    <div class="general-page-terms__wrap">
      {% if section.settings.heading != blank %}
        <div class="general-page-terms__heading">
          <h5>{{ section.settings.heading }}</h5>
        </div>
      {% endif %}
    </div>
    <div class="general-page-terms__wrap">
      {% if section.settings.paragraph_1 != blank %}
        <div class="general-page-terms__body">
          {{ section.settings.paragraph_1 }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .general-page-terms__wrap {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
  }

  .general-page-terms__heading {
    grid-column: span 3;
  }

  .general-page-terms__heading h5 {
    font-size: 24px;
    font-weight: 600;
  }

  .general-page-terms__body {
    grid-column: 4 / span 6;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "General Page Terms",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This is your section heading"
    },
    {
      "type": "richtext",
      "id": "paragraph_1",
      "label": "Description",
      "default": "<p>This is your section heading</p>"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "General Page Terms",
      "category": "Custom"
    }
  ]
}
{% endschema %}
