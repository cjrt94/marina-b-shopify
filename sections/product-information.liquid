      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": []
}
{% endschema %}

<style>
  .hide-media{
    display:none;
    width:0
  }

  .product-media-container:has(.hide-media) {
    display:none;
    width:0
  }
</style>

<script>
const handle = "products/{{ product.handle }}.js";

fetch(window.Shopify.routes.root + handle)
  .then(res => res.json())
  .then(product => {
    const optionsToWatch = "{{ settings.media_grouping_option }}".split(",");
    const colorOption = product.options.find(option => optionsToWatch.includes(option.name));
    if (!colorOption) return;

    const colorImagePositions = {};
    colorOption.values.forEach(color => {
      const variant = product.variants.find(v => v.options[colorOption.position - 1] === color);
      if (variant && variant.featured_media) {
        colorImagePositions[color] = variant.featured_media.position;
      }
    });

    const sortedColors = Object.entries(colorImagePositions).sort((a, b) => a[1] - b[1]);

    const colorImageRanges = {};
    sortedColors.forEach((color, index) => {
      const name = color[0];
      const start = color[1];
      const end = sortedColors[index + 1] ? sortedColors[index + 1][1] : null;
      colorImageRanges[name] = end ? [start, end] : [start];
    });

    const colorImageIDs = {};
    Object.entries(colorImageRanges).forEach(([color, range]) => {
      const start = range[0];
      const end = range[1] || product.media.length + 1;
      const ids = product.media
        .filter((m, i) => i + 1 >= start && i + 1 < end)
        .map(m => m.id);
      colorImageIDs[color] = ids;
    });

    let mediaGallery = document.querySelector("media-gallery");
    const variantPicker = document.querySelector(".variant-picker");
    if (!mediaGallery || !variantPicker) return;

    const assignDataMediaGroup = () => {
      mediaGallery = document.querySelector("media-gallery");
      Object.entries(colorImageIDs).forEach(([color, ids]) => {
        ids.forEach(id => {
          const el = mediaGallery.querySelector(`[data-media-id="${id}"]`);
          if (el) el.setAttribute("data-media-group", color);

          console.log("Assign data media group", el)
        });
      });
    };

    const showVariantImage = () => {
      const selectedColor = Array.from(
        variantPicker.querySelectorAll('input[type="radio"]:checked')
      )
        .map(input => input.value)
        .find(v => colorImageIDs.hasOwnProperty(v));

      if (!selectedColor) return;

      mediaGallery.querySelectorAll("[data-media-id]").forEach(el => {
        if (el.getAttribute("data-media-group") === selectedColor) {
          el.classList.remove("hide-media");
        } else {
          el.classList.add("hide-media");
        }
      });
    };

    const fullRefresh = () => {
     
      assignDataMediaGroup();
      showVariantImage();
    };

    assignDataMediaGroup();
    showVariantImage();

    const pickerForm = document.querySelector(".variant-picker__form");
    if (pickerForm) {
      pickerForm.addEventListener("change", fullRefresh);
    }

    setInterval(()=>{
      assignDataMediaGroup();
      showVariantImage();
    }, 1000)

  })
  .catch(err => console.error("Error fetching product:", err));
</script>
