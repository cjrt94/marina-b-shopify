<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="page-width">
    <div class="section">
      <div class="text-with-two-columns__text">
        {% if section.settings.paragraph_1 != blank %}
          <p class="text-with-two-columns___paragraph">{{ section.settings.paragraph_1 }}</p>
        {% endif %}

        {% if section.settings.paragraph_2 != blank %}
          <p class="text-with-two-columns___paragraph">{{ section.settings.paragraph_2 }}</p>
        {% endif %}
      </div>
    </div>

    <div class="section section__text-with-two-columns__images">
      <div class="text-with-two-columns__images">
        {% if section.settings.image_1 != blank %}
          <img
            src="{{ section.settings.image_1 | image_url: width: 800 }}"
            alt="{{ section.settings.image_1.alt | escape }}"
            loading="lazy"
          >
        {% endif %}

        {% if section.settings.image_2 != blank %}
          <img
            src="{{ section.settings.image_2 | image_url: width: 800 }}"
            alt="{{ section.settings.image_2.alt | escape }}"
            loading="lazy"
          >
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .text-with-two-columns__text {
  display: grid;
  grid-template-columns: 1fr 1fr;
  padding-top: 48px;
  padding-bottom: 48px;
  font-size: 16px;
}

.text-with-two-columns___paragraph {
  margin: 0;
  padding-right: 30%;
  font-weight: 300;
}

.text-with-two-columns___paragraph:nth-of-type(2) {
  padding-left: 5%;
}

.section__text-with-two-columns__images {
  border-top: 0.3px solid var(--color-border);
  border-bottom: 0.3px solid var(--color-border);
}

.text-with-two-columns__images {
  display: grid;
  grid-template-columns: 1fr 1fr;
}

.text-with-two-columns__images img {
  padding-top: 48px;
  padding-bottom: 48px;
}

.text-with-two-columns__images img:nth-of-type(1) {
  padding-right: 48px;
  border-right: 0.3px solid var(--color-border);
}

.text-with-two-columns__images img:nth-of-type(2) {
  padding-left: 48px;
}

/* ======================================
   TABLET (≤768px)
====================================== */
@media (max-width: 768px) {
  .text-with-two-columns__text {
    grid-template-columns: 1fr;
    padding-top: 40px;
    padding-bottom: 40px;
    row-gap: 24px;
  }

  .text-with-two-columns___paragraph {
    padding-right: 0;
  }

  .text-with-two-columns___paragraph:nth-of-type(2) {
    padding-left: 0;
  }

  .text-with-two-columns__images {
    grid-template-columns: 1fr;
  }

  .text-with-two-columns__images img:nth-of-type(1) {
    padding-right: 0;
    border-right: none;
    border-bottom: 0.3px solid var(--color-border);
    padding-bottom: 32px;
  }

  .text-with-two-columns__images img:nth-of-type(2) {
    padding-left: 0;
    padding-top: 32px;
  }
}

/* ======================================
   MOBILE (≤460px)
====================================== */
@media (max-width: 460px) {
  .text-with-two-columns__text {
    padding-top: 32px;
    padding-bottom: 32px;
    row-gap: 20px;
  }

  .text-with-two-columns__images img {
    padding-top: 32px;
    padding-bottom: 32px;
  }

  .text-with-two-columns__images img:nth-of-type(1),
  .text-with-two-columns__images img:nth-of-type(2) {
    padding-left: 0;
    padding-right: 0;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Text With Two Columns",
  "settings": [
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "First paragraph",
      "default": "This is the first text block in your section."
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Second paragraph",
      "default": "This is the second text block in your section."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Text With Two Columns",
      "category": "Custom"
    }
  ]
}
{% endschema %}
